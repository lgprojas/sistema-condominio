RewriteCond %{SERVER_PORT} 80 
RewriteRule ^(.*)$ https://www.dominio.cl/$1 [R,L]

RewriteCond %{HTTP_REFERER} !^http://dominio.cl/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^http://dominio.cl$      [NC]
RewriteCond %{HTTP_REFERER} !^http://www.dominio.cl/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^http://www.dominio.cl$      [NC]
RewriteCond %{HTTP_REFERER} !^https://dominio.cl/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^https://dominio.cl$      [NC]
RewriteCond %{HTTP_REFERER} !^https://www.dominio.cl/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^https://www.dominio.cl$      [NC]
RewriteRule .*\.(jpg|jpeg|gif|bmp)$ - [F,NC]

#RewriteCond %{HTTP_HOST} ^demo\.dominio\.cl
#RewriteRule ^(.*)$ https://www.dominio.cl/demo/$1 [L]
